<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/hospedaje_foto"
        android:layout_width="match_parent"
        android:layout_marginTop="01dp"
        android:layout_height="172dp"
        android:layout_weight="0.32"
        app:srcCompat="@drawable/bayas" />

    <TextView
        android:id="@+id/hospedaje_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:text="Las Bayas Hotel"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff000000"
        android:textSize="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        />


    <TextView
        android:id="@+id/hospedaje_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.64"
        android:text="      Las Bayas es un hotel boutique situado en el centro de Esquel, a 19 km del aeropuerto de la localidad. Ofrece habitaciones con bañera de hidromasaje y conexión Wi-Fi gratuita en todo el hotel."
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"


        />
</LinearLayout>